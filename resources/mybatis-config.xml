<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd" >
<configuration>
<!-- 引入外部资源文件 -->
<properties resource="config.properties"></properties>
<!-- 配置环境 -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
      	<!-- 配置连接信息 -->
        <property name="driver" value="${driver}"/>
        <property name="url" value="${jdbcUrl}"/>
        <property name="username" value="${user}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
  	<mapper class="com.bolool.mybatis.TDanchangMatchMapper"/>
  	<mapper class="com.bolool.mybatis.TDanchangCalcinfoMatchMapper"/>
  	<mapper class="com.bolool.mybatis.TDanchangCalcinfoMapper"/>
  	<mapper class="com.bolool.mybatis.TDanchangCalcinfoResultMapper"/>
  	<mapper class="com.bolool.mybatis.TDanchangCalcinfoResultMatchMapper"/>
  </mappers>
</configuration>
